func ToUIFloat(value float64) string {
	return strconv.FormatFloat(value, 'f', 2, 32)
}

func ToUIDate(date sql.NullTime) string {
	if date.Valid {
		return date.Time.Format("02/01/2006")
	}
	return ""
}

